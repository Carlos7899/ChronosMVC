@model ChronosMVC.Models.Curriculo.FormacaoModel

@{
    ViewData["Title"] = "Adicionar Nova Formação";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/adicionarFormacao.css" rel="stylesheet" />
</head>

<br />
<br />
<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <!-- Exibição de Mensagens de Sucesso ou Erro -->
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Formulário de Adicionar Formação -->
    <form method="post" asp-action="AdicionarFormacao">
        <div class="form-group mb-3">
            <label for="cursoFormacao" class="form-label">Curso</label>
            <input type="text" class="form-control" id="cursoFormacao" name="cursoFormacao" value="@Model.cursoFormacao" required />
        </div>

        <div class="form-group mb-3">
            <label for="instituicaoFormacao" class="form-label">Instituição</label>
            <input type="text" class="form-control" id="instituicaoFormacao" name="instituicaoFormacao" value="@Model.instituicaoFormacao" required />
        </div>

        <div class="form-group mb-3">
            <label for="dataConclusaoFormacao" class="form-label">Data de Conclusão</label>
            <input type="date" class="form-control" id="dataConclusaoFormacao" name="dataConclusaoFormacao" value="@Model.dataConclusaoFormacao.ToString("yyyy-MM-dd")" required />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Adicionar Formação</button>
            <a href="@Url.Action("ListaFormacoes")" class="btn btn-secondary">Voltar para a lista de formações</a>
        </div>
    </form>
</div>

<style>
    /* Estilos adicionais */
    .btn-close {
        color: #fff;
    }

    .container {
        max-width: 600px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 10px;
    }

    .alert {
        border-radius: 10px;
        margin-bottom: 1.5rem;
    }

    .alert-dismissible .btn-close {
        margin-top: -10px;
        margin-right: -10px;
    }

    h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
    }

    .d-flex {
        margin-top: 20px;
    }

    .btn {
        border-radius: 25px;
        padding: 10px 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>