@model ChronosMVC.Models.CursoModel

@{
    ViewData["Title"] = "Criar Curso";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<h1 class="text-center mb-4">Criar Curso</h1>

<!-- Barra de Navegação -->
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container">
        <a class="navbar-brand" asp-controller="Curso" asp-action="ListaCursos">Cursos</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Curso" asp-action="CriarCurso">Criar Curso</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("CursosPorCorporacao", "Curso")">Meus Cursos</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container bg-light p-4 rounded shadow-sm">
    <form asp-action="CriarCurso" method="post">
        <div class="form-group mb-3">
            <label asp-for="nomeCurso" class="form-label">Nome do Curso</label>
            <input asp-for="nomeCurso" class="form-control" placeholder="Digite o nome do curso" />
            <span asp-validation-for="nomeCurso" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="descricaoCurso" class="form-label">Descrição do Curso</label>
            <textarea asp-for="descricaoCurso" class="form-control" placeholder="Descreva o conteúdo do curso"></textarea>
            <span asp-validation-for="descricaoCurso" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="cargaHorariaCurso" class="form-label">Carga Horária </label>
            <input asp-for="cargaHorariaCurso" type="number" class="form-control" placeholder="Ex: 40" />
            <span asp-validation-for="cargaHorariaCurso" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="dataInicioCurso" class="form-label">Data de Início</label>
            <input asp-for="dataInicioCurso" type="date" class="form-control" />
            <span asp-validation-for="dataInicioCurso" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="dataFimCurso" class="form-label">Data de Término</label>
            <input asp-for="dataFimCurso" type="date" class="form-control" />
            <span asp-validation-for="dataFimCurso" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="limiteVagas" class="form-label">Limite de Vagas</label>
            <input asp-for="limiteVagas" type="number" class="form-control" placeholder="Número de vagas disponíveis" />
            <span asp-validation-for="limiteVagas" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary btn-lg">Criar Curso</button>
            <a asp-controller="Curso" asp-action="ListaCursos" class="btn btn-secondary btn-lg">Cancelar</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}