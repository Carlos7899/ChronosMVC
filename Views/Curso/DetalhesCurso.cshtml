@model ChronosMVC.Models.CursoModel

@{
    ViewData["Title"] = "Detalhes do Curso";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .curso-detail {
        margin-top: 20px;
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .curso-detail h2 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .curso-detail p {
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .btn-back {
        margin-top: 20px;
    }
</style>
<br />
<br />
<br />
<div class="container curso-detail">
    <h2>@Model.nomeCurso</h2>
    <p><strong>Descrição:</strong> @Model.descricaoCurso</p>
    <p><strong>Carga Horária:</strong> @Model.cargaHorariaCurso horas</p>
    <p><strong>Data Início:</strong> @Model.dataInicioCurso.ToString("dd/MM/yyyy")</p>
    <p><strong>Data Fim:</strong> @Model.dataFimCurso.ToString("dd/MM/yyyy")</p>
    <p><strong>Limite de Vagas:</strong> @(Model.limiteVagas.HasValue ? Model.limiteVagas.ToString() : "Sem limite")</p>

    <a class="btn btn-secondary btn-back" href="@Url.Action("ListaCursos", "Curso")">Voltar para a lista de cursos</a>
</div>
