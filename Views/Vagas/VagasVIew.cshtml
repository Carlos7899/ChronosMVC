@model IEnumerable<ChronosMVC.Models.VagaModel>

@{
    ViewBag.Title = "Vagas";
}

<!-- Container para centralizar o conteúdo -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Vagas Disponíveis</h2>

    <!-- Botão para criar nova vaga -->
    @if (User.IsInRole("Corporacao"))
    {
        <div class="text-end mb-3">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Criar Nova Vaga
            </a>
        </div>
    }

    <!-- Verificação de mensagens de sucesso ou erro -->
    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-success">
            @TempData["Mensagem"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger">
            @TempData["MensagemErro"]
        </div>
    }

    <!-- Cards de vagas -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.nomeVaga</h5>
                        <p class="card-text">@item.descricaoVaga</p>
                        <p class="card-text">
                            <small class="text-muted">Criada em: @item.DataCriacao.ToString("dd/MM/yyyy")</small>
                        </p>
                    </div>
                    <div class="card-footer">
                        @if (User.IsInRole("Corporacao") && User.FindFirst("IdCorporacao")?.Value == item.idCorporacao.ToString())
                        {
                            <a href="@Url.Action("Edit", new { id = item.idVaga })" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.idVaga })" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> Deletar
                            </a>
                        }
                        <a href="@Url.Action("Details", new { id = item.idVaga })" class="btn btn-info">
                            <i class="fas fa-info-circle"></i> Detalhes
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
