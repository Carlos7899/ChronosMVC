@model IEnumerable<ChronosMVC.Models.VagaModel>

@{
    ViewBag.Title = "Vagas";
}

<!-- CSS para estilização -->
<style>
    .search-container {
        margin-bottom: 20px;
    }

    .card-title, .card-text {
        overflow: hidden; /* Oculta o texto que ultrapassa o limite */
        white-space: nowrap; /* Não permite que o texto quebre para a próxima linha */
        text-overflow: ellipsis; /* Adiciona "..." no final do texto que foi truncado */
    }

    .card-text {
        max-height: 60px; /* Limita a altura do texto no cartão */
        line-height: 1.2em; /* Define a altura da linha para o texto */
    }

    .search-input {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .card {
        transition: transform 0.2s;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .vaga-detail {
        margin-top: 10px;
    }

    /* Estilo para a navbar com fundo azul claro, aumento nas laterais e bordas arredondadas */
    .navbar-light {
        background-color: #ADD8E6 !important;
        padding-left: 15px; /* Aumenta 5px na lateral esquerda */
        padding-right: 15px; /* Aumenta 5px na lateral direita */
        border-radius: 10px; /* Arredonda as bordas da navbar */
    }

    /* Estilo para o botão de pesquisa */
    .btn-outline-success {
        background-color: #28a745; /* Cor de fundo do botão */
        color: white; /* Cor do texto do botão */
        border-radius: 0.25rem; /* Arredonda as bordas do botão */
    }

    /* Estilo para a barra de pesquisa */
    .form-control {
        width: 450px; /* Aumenta um pouco mais a altura da barra de pesquisa */
    }

    .card {
    border-radius: 10px; /* Borda arredondada */
    overflow: hidden; /* Evita conteúdo "vazando" */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px); /* Levanta o card ao passar o mouse */
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); /* Sombra mais intensa no hover */
}

.card-header {
    font-size: 1.2rem;
    font-weight: bold;
}

.card-footer {
    border-top: 1px solid #e5e5e5;
}

.vaga-detail p {
    margin-bottom: 10px;
    font-size: 0.9rem;
}

.btn-info {
    background-color: #007bff;
    border-color: #0056b3;
}

.btn-info:hover {
    background-color: #0056b3;
    border-color: #003f7f;
}

.text-muted {
    font-size: 0.9rem;
}

</style>

<link href="~/css/navbar.css" rel="stylesheet" />
<br><br><br><br>
<!-- Navegação -->
<nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="@Url.Action("VagasView", "Vagas")">Vagas</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                @if (User.IsInRole("Corporacao"))
                {
                    <li class="nav-item" style="margin-right: 15px; margin-left: 15px;">
                        <a class="nav-link" asp-controller="Vagas" asp-action="Create">Criar Vaga</a>
                    </li>
                    <li class="nav-item" style="margin-right: 15px;">
                        <a class="nav-link" href="@Url.Action("VagasPorCorporacao", "Vagas")">Minhas Vagas</a>
                    </li>
                    <li class="nav-item" style="margin-right: 15px;">
                        <a class="nav-link" href="@Url.Action("CandidaturasPorCorporacao", "Candidatura")">Minhas Candidaturas</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MinhasCandidaturas", "Candidatura")">Minhas Candidaturas</a>
                    </li>
                }

            </ul>
            <form class="d-flex ms-auto" asp-controller="Vagas" asp-action="PesquisarVagas" method="get">
                <input class="form-control me-2" type="search" name="nomeVaga" placeholder="Pesquisar por nome da vaga" aria-label="Pesquisar" required />
                <button class="btn btn-outline-success" type="submit">Pesquisar</button>
            </form>
        </div>
    </div>
</nav>

<!-- Container para centralizar o conteúdo -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Vagas Disponíveis</h2>

    <!-- Verificação de mensagens de sucesso ou erro -->
    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-success">
            @TempData["Mensagem"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger">
            @TempData["MensagemErro"]
        </div>
    }

    <div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <!-- Cabeçalho do Card -->
                <div class="card-header text-white bg-primary text-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-briefcase"></i> @item.nomeVaga
                    </h5>
                </div>
                <!-- Corpo do Card -->
                <div class="card-body">
                    <p class="card-text text-muted">@item.descricaoVaga</p>
                    <div class="vaga-detail">
                        <p><i class="fas fa-tasks"></i> <strong>Responsabilidades:</strong> @item.responsabilidadesVaga</p>
                        <p><i class="fas fa-gift"></i> <strong>Benefícios:</strong> @item.beneficiosVaga</p>
                        <p><i class="fas fa-money-bill"></i> <strong>Salário:</strong> @item.salarioVaga</p>
                        <p><i class="fas fa-map-marker-alt"></i> <strong>Cidade:</strong> @item.cidadeVaga</p>
                        <p><i class="fas fa-calendar"></i> <strong>Criada em:</strong> @item.DataCriacao.ToString("dd/MM/yyyy")</p>
                        <p><i class="fas fa-hourglass-end"></i> <strong>Vencimento:</strong> @item.DataVencimento.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
                <!-- Rodapé do Card -->
                <div class="card-footer bg-light text-center">
                    <a href="@Url.Action("Details", new { id = item.idVaga })" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle"></i> Detalhes
                    </a>
                </div>
            </div>
        </div>
    }
</div>


</div>
