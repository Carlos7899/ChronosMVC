@model ChronosMVC.Models.VagaModel

@{
    ViewBag.Title = "Detalhes da Vaga";
}

<!-- CSS para estilização -->
<style>
    .vaga-detail {
        margin-top: 10px;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .btn-custom {
        padding: 10px 20px;
    }
</style>

<!-- Detalhes da Vaga -->
<div class="container mt-5">
    <h2 class="text-center mb-4">@Model.nomeVaga</h2>

    <div class="vaga-detail">
        <h5>Descrição</h5>
        <p>@Model.descricaoVaga</p>

        <h5>Detalhes da Vaga</h5>
        <p><strong>Responsabilidades:</strong> @Model.responsabilidadesVaga</p>
        <p><strong>Benefícios:</strong> @Model.beneficiosVaga</p>
        <p><strong>Salário:</strong> @Model.salarioVaga</p>
        <p><strong>Cidade:</strong> @Model.cidadeVaga</p>
        <p><strong>Criada em:</strong> @Model.DataCriacao.ToString("dd/MM/yyyy")</p>
        <p><strong>Vencimento:</strong> @Model.DataVencimento.ToString("dd/MM/yyyy")</p>
    </div>

    <div class="text-end mt-4">
        <form method="post" asp-action="Candidatar" asp-controller="Candidatura">
            <input type="hidden" name="idVaga" value="@Model.idVaga" />
            <button type="submit" class="btn btn-primary btn-custom">Candidatar-se</button>
        </form>
        <a href="@Url.Action("VagasView", "Vagas")" class="btn btn-secondary btn-custom">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
    </div>
</div>
