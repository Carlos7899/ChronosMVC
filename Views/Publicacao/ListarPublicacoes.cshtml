@model List<PublicacaoModel>
@{
    ViewData["Title"] = "Publicações";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<style>
    body {
        background-color: #f0f2f5;
    }

    .container {
        max-width: 800px;
        margin-top: 30px;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .post-card {
        border-bottom: 1px solid #e6e6e6;
        padding: 20px;
        text-decoration: none;
        color: inherit;
        transition: background-color 0.2s, transform 0.2s;
        margin-bottom: 20px; /* Espaçamento entre os cards */
    }

        .post-card:hover {
            background-color: #f9f9f9;
            transform: translateY(-2px);
        }

    .post-header {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .post-image {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 15px;
    }

    .post-title {
        font-size: 1.2em;
        font-weight: bold;
        color: #333;
    }

    .post-body {
        font-size: 0.95em;
        color: #555;
        margin: 10px 0;
    }

    .post-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #888;
        font-size: 0.9em;
    }

    .avaliacao {
        color: #28a745;
        font-weight: bold;
    }

    .post-image-publicacao {
        width: 100%;
        max-height: 200px;
        object-fit: cover;
        border-radius: 8px;
        margin-top: 10px;
    }

    .interaction-buttons {
        display: flex;
        gap: 10px;
    }

    .btn-info {
        font-size: 0.85em;
        padding: 0.25rem 0.5rem;
    }
</style>
<div class="container">
    <h1 class="text-center mb-4">Publicações</h1>
    @if (User.IsInRole("Corporacao"))
    {
        <div class="text-end mb-3">
            <a href="@Url.Action("CriarPublicacao", "Publicacao")" class="btn btn-primary mb-3 w-100">Criar Publicação</a>
        </div>
    }
    @foreach (var publicacao in Model)
    {
        <div class="post-card" onclick="location.href='@Url.Action("DetalhesPublicacao", "Publicacao", new { id = publicacao.idPublicacao })';" style="cursor:pointer;">
            <div class="post-header">
                <img src="default-profile-image.png" alt="User Image" class="post-image" />
                <div>
                    <div class="post-title">@publicacao.títuloPublicacao</div>
                    <div class="avaliacao">Avaliação: @publicacao.avaliacaoPublicacao</div>
                </div>
            </div>
            <div class="post-body">@publicacao.conteudoPublicacao</div>
            @if (publicacao.imagemPublicacao != null && publicacao.imagemPublicacao.Length > 0)
            {
                var base64Image = Convert.ToBase64String(publicacao.imagemPublicacao);
                var imageSrc = $"data:image/png;base64,{base64Image}";
                <img src="@imageSrc" alt="Imagem da publicação" class="post-image-publicacao">
            }
            <div class="post-footer">
                <span>@publicacao.dataCriacaoPublicacao.ToString("dd/MM/yyyy")</span>
                <div class="interaction-buttons">
                    <button class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-heart"></i> Curtir
                    </button>
                    <a asp-controller="Publicacao" asp-action="DetalhesPublicacao" asp-route-idPublicacao="@publicacao.idPublicacao" class="btn btn-info btn-sm">Ver Comentários</a>
                    <span class="views">
                        <i class="bi bi-eye"></i> @publicacao.numeroVisualizacoes Visualizações
                    </span>
                </div>
            </div>
        </div>
    }
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
